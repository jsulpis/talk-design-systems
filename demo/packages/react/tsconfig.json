{
   "compilerOptions": {
      "outDir": "./dist",
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "declaration": true,
      "skipLibCheck": true,
      "jsx": "react",
      "declarationDir": "./dist/types"
   },
   "include": ["lib"],
   "exclude": ["node_modules"]
}
