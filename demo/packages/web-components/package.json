{
  "name": "@ds/web-components",
  "version": "0.0.1",
  "description": "Stencil Component Starter",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/ds/ds.esm.js",
      "require": "./dist/ds/ds.cjs.js"
    },
    "./ds-button": {
      "import": "./dist/components/ds-button.js",
      "types": "./dist/components/ds-button.d.ts"
    },
    "./ds-input": {
      "import": "./dist/components/ds-input.js",
      "types": "./dist/components/ds-input.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "main": "dist/index.cjs.js",
  "unpkg": "dist/ds/ds.esm.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "dev": "stencil build --dev --watch --serve",
    "generate": "stencil generate",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll"
  },
  "devDependencies": {
    "@ds/css": "link:../css",
    "@ds/tokens": "link:../tokens",
    "@stencil/core": "^4.27.1",
    "@stencil/sass": "3.2.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0"
  },
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js"
}
